        <Grid Grid.Row="1" Grid.Column="1" Margin="52,71,48,-87">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <fxui:Interaction.Behaviors>
                    <fxui:MouseWheelScroll/>
                </fxui:Interaction.Behaviors>
