    <Grid x:Name="LayoutRoot" Background="White">
        <Grid x:Name="gdTop">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="0"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>


            <Grid Grid.Column="0" Grid.Row="1" x:Name="gdTreeViewer" ShowGridLines="False" UseLayoutRounding="False">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,40,0,0">
                    <tv:ThreadSelector x:Name="ThreadSelectorName" HorizontalAlignment="Left" HorizontalContentAlignment="Left" VerticalContentAlignment="Top" VerticalAlignment="Top"/>
                </StackPanel>
            </Grid>

            <Grid x:Name="gdHeader" Grid.Column="1" Grid.Row="0" Margin="0" VerticalAlignment="Center" HorizontalAlignment="Center">
                <StackPanel Orientation="Horizontal" Margin="0">
                    <!--dataInput:Label HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" Content="調 剤 部 門 連 絡 掲 示 板" Foreground="#FF588FAF"/-->
                </StackPanel>
            </Grid>

            <Grid Grid.Column="1" Grid.Row="1" x:Name="gdThread">
                <ScrollViewer BorderThickness="0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" x:Name="svThread">
                    <!--fxui:Interaction.Behaviors>
                        <fxui:MouseWheelScroll />
                    </fxui:Interaction.Behaviors-->
                    <StackPanel x:Name="StackP1" Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Left" />
                </ScrollViewer>
            </Grid>

            <Grid x:Name="gdButtons" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0">
                <StackPanel Orientation="Horizontal" Margin="0">
                    <Button x:Name="btスレット追加" Content="スレッド追加" Background="#FF0F88EF" Template="{StaticResource ButtonControlTemplate1}" Width="130" Click="btスレット追加_Click" Visibility="Collapsed"/>
