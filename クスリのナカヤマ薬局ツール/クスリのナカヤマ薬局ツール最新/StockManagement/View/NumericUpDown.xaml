<UserControl x:Class="StockManagement.View.NumericUpDown"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             Width="Auto" Height="Auto"
             >
    <Grid>
        
        <StackPanel Orientation="Horizontal">
            <TextBox x:Name="tbNum" Height="60" Width="150" Text="" FontSize="20" TextAlignment="Center" VerticalAlignment="Center"  LostFocus="txtNum_LostFocus" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            
            <StackPanel Orientation="Vertical">
                <Button x:Name="cmdUp" x:FieldModifier="private" Margin="0,0,0,0" Content="▲" Width="30" FontSize="10"  Height="30" Click="cmdUp_Click" VerticalAlignment="Center" Cursor="Hand" />
                <Button x:Name="cmdDown" x:FieldModifier="private" Margin="0,0,0,0"  Content="▼" Width="30" FontSize="10" Height="30" Click="cmdDown_Click" VerticalAlignment="Center" Cursor="Hand"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
