<Window x:Class="MCSystem.View.Windows.Cancel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Topmost="True"
        WindowStyle="None"
        Title="" Height="105" Width="120" Background="#FF2F415F">
    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
            <TextBlock Text="ESCを10回押してから下記のボタンを押して下さい。" TextWrapping="Wrap" FontSize="8" Foreground="White"/>
            <Button x:Name="btnCancel" Content="処理を中止" Click="btnCancel_Click" Background="Salmon" Width="75" Height="50" Foreground="White" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>
